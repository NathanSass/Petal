<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <com.nathansass.petal.widgets.AspectRatioImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:src="@drawable/outkast"
        android:id="@+id/eventBanner"
        android:layout_below="@+id/tool_bar"
        android:layout_alignRight="@+id/likeEvent"
        android:layout_alignEnd="@+id/likeEvent"/>
    <View
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/event_gradient_top"/>

    <View
        android:id="@+id/eventBannerBottomGradient"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:layout_height="100dp"
        android:background="@drawable/event_gradient_bottom"/>
    <View
        android:layout_below="@+id/eventBannerBottomGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/event_image_mask"/>

    <TextView
        android:id="@+id/eventDistance"
        android:layout_below="@+id/tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3.1 Miles Away"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:gravity="left"/>

    <TextView
        android:id="@+id/eventPrice"
        android:layout_below="@+id/tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eventDistance"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FREE"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:gravity="right"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/eventAddress"
        android:layout_below="@+id/eventDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unit 5, 1234 Farm St."
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:textIsSelectable="false"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/eventAddressCityState"
        android:layout_below="@+id/eventAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Corpus Christi, TX"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:textIsSelectable="false"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/eventTitle"
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Event Which Will Never Show Up"
        android:textColor="#ffffff"
        android:gravity="left"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textIsSelectable="false"/>
    <TextView
        android:id="@+id/eventDate"
        android:layout_below="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Saturday, April 27"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:gravity="left"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like Event"
        android:id="@+id/likeEvent"
        android:background="#50E3C2"
        android:onClick="eventLikeButtonClick"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip Event"
        android:id="@+id/discardEvent"
        android:background="#FFF"
        android:onClick="eventSkipButtonClick"
        android:textColor="#FF217B"
        android:layout_alignTop="@+id/likeEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



</RelativeLayout>
