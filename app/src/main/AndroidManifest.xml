<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nathansass.petal"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateEventActivity"
            android:label="Create a new event">
        </activity>
        <activity
            android:name=".activities.LikedEventsListActivity"
            android:label="Schedule">
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".activities.ChooseEventsActivity"
            android:label="@string/title_activity_choose_events">
        </activity>
        <activity
            android:name=".activities.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
